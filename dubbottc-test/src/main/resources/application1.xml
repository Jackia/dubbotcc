<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://code.alibabatech.com/schema/dubbo
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd
             http://www.springframework.org/schema/context
             http://www.springframework.org/schema/context/spring-context-4.0.xsd
            ">
    <!--注解配置 -->
    <context:component-scan base-package="com.kp"/>
    <!-- 消费方应用名，用于计算依赖关系，不是匹配条件，不要与提供方一样 -->
    <dubbo:application name="kupartstest" logger="slf4j"/>
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <!-- 多注册中心配置，竖号分隔表示同时连接多个不同注册中心，同一注册中心的多个集群地址用逗号分隔 -->
    <!-- 注册中心地址${dubbo.registry.address} -->
    <dubbo:registry protocol="zookeeper" address="zookeeper://192.168.71.130:2181?backup=192.168.71.130:2182,192.168.71.130:2183"/>

    <bean class="com.kuparts.dubbotcc.supervise.spring.TccTransactionSpring">
        <property name="cache" value="mongo"/>
        <property name="serializer" value="kryo"/>
        <property name="supervise" value="false"/>
        <property name="configs">
            <props>
                <prop key="rollbackQueueMax">200</prop>
                <prop key="mongoDbName">kp_member</prop>
                <prop key="mongoDbUrl">10.1.1.101:28885,10.1.1.102:28885,10.1.1.103:28885</prop>
                <prop key="mongoUserName">dbmember</prop>
                <prop key="mongoUserPwd">654321</prop>
            </props>
        </property>
    </bean>
</beans>